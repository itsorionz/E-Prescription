@model IEnumerable<EPrescription.Entities.Role>
    @using EPrescription.Common
@{
    ViewBag.Title = "Roles";
}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">User Add</h3>

                    <div class="box-tools pull-right">
                        <a href="@Url.Action("AddRole", "User")" class="btn btn-box-tool" title="Add User">
                            <i class="fa fa-plus"></i>
                        </a>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-box-tool" title="Remove">
                            <i class="fa fa-times"></i>
                        </a>

                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">

                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                                        <th>@Html.DisplayName("Task Assigned")</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string taskAssigned = "";
                                        <tr>
                                            <td class="col-md-2">@Html.DisplayFor(modelItem => item.RoleName)</td>
                                            <td class="col-md-9">
                                                @if (item.RoleTasks.Any())
                                                {
                                                    foreach (var i in item.RoleTasks)
                                                    {
                                                        taskAssigned += i.Task.Replace("_"," ") + ", ";
                                                    }
                                                }

                                                @taskAssigned.Trim(',', ' ')
                                            </td>
                                            <td class="col s2">
                                            
                                                <a href="@Url.Action("EditRole","User",new{id=item.Id})" class="btn-floating waves-effect waves-light green"><i class="fa fa-pencil"></i></a>
                                              
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
               
                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="@Url.Action("Index","Home")" class="btn btn-danger">Cancel</a>
                 
                </div>
                <!-- /.box-footer-->
            </div>
       
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>





