@model IEnumerable<EPrescription.Entities.Clinic>
@using EPrescription.Common
@using EPrescription.Web.Models
@{
    ViewBag.Title = "Clinics";
}
<div class="content-wrapper">
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Clinics</h3>
                <div class="box-tools pull-right">
                    <a href="@Url.Action("Add", "Clinic")" class="btn btn-box-tool" title="Add">
                        <i class="fa fa-plus-circle"></i>
                    </a>
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-box-tool" title="Remove">
                        <i class="fa fa-times"></i>
                    </a>

                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="text-bold text-blue">
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Timings)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().OffDays)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Mobile)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(itemElement => item.Name)</td>
                                        <td>@Html.DisplayFor(itemElement => item.Address)</td>
                                        <td>@Html.DisplayFor(itemElement => item.Phone)</td>
                                        <td>@Html.DisplayFor(itemElement => item.Timings)</td>
                                        <td>@Html.DisplayFor(itemElement => item.OffDays)</td>
                                        <td>@Html.DisplayFor(itemElement => item.Email)</td>
                                        <td>@Html.DisplayFor(itemElement => item.Mobile)</td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                 
                </div>
            </div>
            <div class="box-footer">
                <a href="@Url.Action("Index","Home")" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </section>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jquery-val")
    <script>
    
    </script>
}