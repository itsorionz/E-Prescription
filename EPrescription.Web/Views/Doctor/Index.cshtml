

@model EPrescription.Web.Models.DoctorModel
@using EPrescription.Common
@using EPrescription.Web.Models
@{
    ViewBag.Title = "Doctor";
}

<div class="content-wrapper">
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Doctor</h3>
                <div class="box-tools pull-right">
                    <a href="@Url.Action("AddOrEdit", "Doctor")" class="btn btn-box-tool" title="Add" data-toggle="tooltip">
                        <i class="fa fa-edit"></i>
                    </a>

                    <a href="@Url.Action("Index", "Home")" class="btn btn-box-tool" title="Remove">
                        <i class="fa fa-times"></i>
                    </a>

                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered">
                            <tr>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Name, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Degree, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Degree, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Specialty, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Specialty, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Institute, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Institute, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RegNo, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.RegNo, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Phone, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Phone, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Website, new { @class = "col-sm-4 control-label text-left" })
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(model => model.Website, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>

                    </div>

                </div>
            </div>
            <div class="box-footer">
                <a href="@Url.Action("Index","Home")" class="btn btn-danger">Cancel</a>

            </div>
        </div>
    </section>
</div>

